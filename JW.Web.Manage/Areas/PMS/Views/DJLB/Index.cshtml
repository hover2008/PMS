
@{
    ViewBag.Title = "单据大类设置";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        查询条件
    </div>
    <div class="panel-body">
        <form id="CK-table-form">
            <div class="col-sm-3">
                <input type="text" class="form-control" id="txtDJQZ" name="txtDJQZ" placeholder="在单据前置中搜索">
            </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="txtName" name="txtName" placeholder="在名称中搜索">
            </div>
            <div class="col-sm-1">
                <button id="CK-table-search" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>搜索
                </button>
            </div>
            <div class="col-sm-1">
                <button id="CK-table-reset" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>重置
                </button>
            </div>
        </form>
    </div>
</div>
<div id="gridListToolbar">
    <button id="CK-CC-add" ck-authorize="yes" class="btn btn-outline btn-default" type="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
    </button>
    <button id="CK-CC-edit" ck-authorize="yes" class="btn btn-outline btn-default" type="button">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>编辑
    </button> 
    <script>var ckCurrentCode = "CC"; $("#gridListToolbar").authorizeButton();</script>
</div>
<table id="gridList" data-toggle="table" data-click-to-select="true" data-select-item-name="rdMenuItem" data-mobile-responsive="true" data-sortable="false">
    <thead>
        <tr>
            <th data-checkbox-field="Id" data-checkbox="true"></th>
            <th data-formatter="indexFormatter" data-align="center" data-width="50px">#</th>
            <th data-field="DJDLName" data-align="center" data-sortable="true" data-width="150px">单据大类</th> 
            <th data-field="DJQZ" data-align="center" data-sortable="true" data-width="100px">单据前缀</th> 
            <th data-field="Name" data-align="left" data-sortable="true">名称</th> 
            <th data-field="Remark" data-align="left" data-sortable="true">备注</th> 
            <th data-field="IsDisabled" data-formatter="disabledFormatter" data-width="60px" data-align="center">有效</th>
        </tr>
    </thead>
</table>
<script type="text/javascript">
    var $table = $('#gridList');
    (function () {
        $table.tableGrid({
            url: "/PMS/DJLB/GetGridJson?r=" + Math.random(),
            uniqueId: "Id",                   //每一行的唯一标识，一般为主键列
            sortName: "Id",
            sortOrder: "desc",                   //排序方式
            queryParams: function (param) {
                return {
                    pageSize: param.pageSize,
                    pageIndex: param.pageNumber,
                    sortName: param.sortName,
                    sortOrder: param.sortOrder,
                    djqz: $.trim($("#txtDJQZ").val()),
                    name: $.trim($("#txtName").val())
                };
            },//传递参数（*）
        });
        $('#gridListToolbar button').on('click', function () {
            var othis = $(this),
                index = othis.attr("id");
            switch (index) {
                case "CK-CC-add":
                    save(0);
                    break;
                case "CK-CC-edit":
                    var $selectOptions = $table.bootstrapTable('getSelections');
                    if ($selectOptions.length > 1) {
                        toastr.warning('只能选择一行进行编辑');
                        return;
                    }
                    if ($selectOptions.length < 1) {
                        toastr.warning('请选择需要编辑的选项');
                        return;
                    }
                    var id = $selectOptions[0].Id;
                    save(id);
                    break;
            }
        });
        $("#CK-table-search").click(function () {
            $table.tableGridRefresh();
        });
        $("#CK-table-reset").click(function () {
            $(":input", "#CK-table-form").not(':button').val('');
            $table.tableGridRefresh();
        });
    })();
    function disabledFormatter(value, row, index) {
        return value == false ? "<i class=\"fa fa-toggle-on\" onclick='set(" + row.Id + ",true)'></i>" : "<i class=\"fa fa-toggle-off\" onclick='set(" + row.Id + ",false)'></i>";
    }
    function save(id) {
        var title = "新增单据类别";
        if (id > 0) {
            title = "编辑单据类别";
        }
        $.modalOpen({
            id: "Form",
            title: title,
            url: "/PMS/DJLB/Form?id=" + id + '&r=' + Math.random(),
            width: "800px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function set(id, action) {
        $.submitForm({
            url: "/PMS/DJLB/Set?r=" + Math.random(),
            param: { 'id': id, 'action': action },
            success: function () {
                $table.tableGridRefresh();
            }
        })
    }
</script>



