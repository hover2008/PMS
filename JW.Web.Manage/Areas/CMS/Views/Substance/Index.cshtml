
@{ 
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
    <title>内容管理框架</title>
    <link rel="stylesheet" href="/css/plugins/treeview/jquery.treeview.css" />
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/js/plugins/treeview/jquery.treeview.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/content.css" />
</head>
<body>
    <div class="container">
        <div class="leftsidebar_box">
            <ul id="navigation" class="filetree" style="height: 100%; box-sizing: border-box; overflow-y: scroll;">
                @Html.Raw(ViewBag.MenuNav)
            </ul>
        </div>
        <div id="right_content">
            <iframe marginwidth="0" marginheight="0" frameborder="0" width="100%" height="100%" name="myFrameName" src="@Url.Action("Info","Substance")" seamless></iframe>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#navigation").treeview();
        });
    </script>
</body>
</html>

