@model JW.Domain.Sys.Entity.UserEntity;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>锁屏登录</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link type="text/css" href="/css/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="/css/font-awesome.css" rel="stylesheet" />
    <link type="text/css" href="/css/animate.css" rel="stylesheet" />
    <link type="text/css" href="/css/style.css" rel="stylesheet" />
    <link type="text/css" href="/css/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <script type="text/javascript">if (window.top !== window.self) { window.top.location = window.location; }</script>
</head>
<body class="gray-bg">
    <div class="lock-word animated fadeInDown">
    </div>
    <div class="middle-box text-center lockscreen animated fadeInDown">
        <div>
            <div class="m-b-md">
                <img alt="image" width="64" height="64" class="img-circle circle-border" src="@(Model.U_PHOTO.Length==0 ? "/images/photo.png":Model.U_PHOTO)">
            </div>
            <h3>@Model.U_NAME</h3>
            <p>您需要再次输入密码</p>
            <form class="m-t" asp-action="LockScreen" asp-controller="Home" method="post" autocomplete="off">
                <div class="form-group">
                    <input type="password" id="userpwd" name="userpwd" class="form-control" placeholder="登录密码" maxlength="30" autocomplete="off">
                </div>
                <button type="submit" class="btn btn-primary block full-width">登录</button>
            </form>
        </div>
    </div>
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/framework.js" asp-append-version="true" type="text/javascript"></script> 
    <script src="/js/plugins/toastr/toastr.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        toastr.options = { positionClass: "toast-top-center", };
        (function ($) {var msg = "@ViewData["msg"]";if (msg) {toastr.error(msg);}})(jQuery);
    </script>
</body>
</html>
